<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/charVertMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="3"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/picture_view"
            android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="4"
		    android:layout_marginTop="2dp"
		    android:layout_marginBottom="2dp"
		    android:layout_marginLeft="2dp"
		    android:layout_marginRight="2dp"
			android:onClick="pictureClicked"
            android:src="@drawable/dude" 
            android:scaleType="centerCrop" />
        
        <LinearLayout
            android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="2"
            android:orientation="vertical" >
            <TextView
	            android:id="@+id/str_text"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:background="#191919"
			    android:textColor="#ffff4c"
			    android:layout_marginTop="2dp"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:clickable="true"
			    android:onClick="viewStrength"
	            android:text="@string/strength" />
            <TextView
	            android:id="@+id/dex_text"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:background="#191919"
			    android:textColor="#ffff4c"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:clickable="true"
			    android:onClick="viewDexterity"
	            android:text="@string/dexterity" />
            <TextView
	            android:id="@+id/con_text"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:background="#191919"
			    android:textColor="#ffff4c"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:clickable="true"
			    android:onClick="viewConstitution"
	            android:text="@string/constitution" />
            <TextView
	            android:id="@+id/int_text"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:background="#191919"
			    android:textColor="#ffff4c"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:clickable="true"
			    android:onClick="viewIntelligence"
	            android:text="@string/intelligence" />
            <TextView
	            android:id="@+id/wis_text"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:background="#191919"
			    android:textColor="#ffff4c"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:clickable="true"
			    android:onClick="viewWisdom"
	            android:text="@string/wisdom" />
            <TextView
	            android:id="@+id/cha_text"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:background="#191919"
			    android:textColor="#ffff4c"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:clickable="true"
			    android:onClick="viewCharisma"
	            android:text="@string/charisma" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
            android:orientation="vertical" >
            <TextView
	            android:id="@+id/str_value_text"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:layout_marginTop="2dp"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:textColor="#ffff4c"
	            android:text="@string/place_holder" />
            <TextView
	            android:id="@+id/dex_value_text"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:textColor="#ffff4c"
	            android:text="@string/place_holder" />
            <TextView
	            android:id="@+id/con_value_text"
	           android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:textColor="#ffff4c"
	            android:text="@string/place_holder" />
            <TextView
	            android:id="@+id/int_value_text"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:textColor="#ffff4c"
	            android:text="@string/place_holder" />
            <TextView
	            android:id="@+id/wis_value_text"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:textColor="#ffff4c"
	            android:text="@string/place_holder" />
            <TextView
	            android:id="@+id/cha_value_text"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:textColor="#ffff4c"
	            android:text="@string/place_holder" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
            android:orientation="vertical" >
            
            <ImageView
	            android:id="@+id/dice_str"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:layout_marginTop="2dp"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    
			    android:onClick="rollStrength"
	            android:src="@drawable/ic_launcher" />
            <ImageView
                android:id="@+id/dice_dex"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:onClick="rollDexterity"
	            android:src="@drawable/ic_launcher" />
            <ImageView
                 android:id="@+id/dice_con"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:onClick="rollConstitution"
	            android:src="@drawable/ic_launcher" />
            <ImageView
                 android:id="@+id/dice_int"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:onClick="rollIntelligence"
	            android:src="@drawable/ic_launcher" />
            <ImageView
                 android:id="@+id/dice_wis"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:onClick="rollWisdom"
	            android:src="@drawable/ic_launcher" />
            <ImageView
                 android:id="@+id/dice_cha"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:layout_marginBottom="2dp"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:onClick="rollCharisma"
	            android:src="@drawable/ic_launcher" />
        </LinearLayout>
    	
    </LinearLayout>
    
    
    
    <LinearLayout
        android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="2"
        android:orientation="horizontal" >
        
        <LinearLayout
	        android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
	        android:orientation="vertical" >
	        
            <TextView
				android:id="@+id/race_text"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:background="#191919"
				android:textColor="#ffff4c"
				android:layout_marginTop="2dp"
				android:layout_marginBottom="2dp"
				android:layout_marginLeft="2dp"
				android:layout_marginRight="2dp"
				android:clickable="true"
				android:onClick="viewRace"
				android:text="@string/place_holder" />
			
		    <TextView
				android:id="@+id/class_text"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:background="#191919"
				android:textColor="#ffff4c"
				android:layout_marginTop="2dp"
				android:layout_marginBottom="2dp"
				android:layout_marginLeft="2dp"
				android:layout_marginRight="2dp"
				android:clickable="true"
				android:onClick="viewClass"
				android:text="@string/place_holder" />
		    
	    	<TextView
				android:id="@+id/alignment_text"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:background="#191919"
				android:textColor="#ffff4c"
				android:layout_marginTop="2dp"
				android:layout_marginBottom="2dp"
				android:layout_marginLeft="2dp"
				android:layout_marginRight="2dp"
				android:clickable="true"
				android:onClick="viewAlignment"
				android:text="@string/place_holder" />	
            
    	</LinearLayout>
        
	    <LinearLayout
	        android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
	        android:orientation="vertical" >
	    	
	        <TextView
				android:id="@+id/level_text"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:background="#191919"
				android:textColor="#ffff4c"
				android:layout_marginTop="2dp"
				android:layout_marginBottom="2dp"
				android:layout_marginRight="2dp"
				android:clickable="true"
				android:onClick="viewLevel"
				android:text="@string/place_holder" />
	    	
	        <TextView
	            android:id="@+id/ac_text"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:background="#191919"
			    android:textColor="#ffff4c"
			    android:layout_marginTop="2dp"
			    android:layout_marginBottom="2dp"
			    android:layout_marginRight="2dp"
			    android:clickable="true"
			    android:onClick="viewAC"
	            android:text="@string/place_holder" />
	        
	        <TextView
	            android:id="@+id/hp_text"
	            android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:background="#191919"
			    android:textColor="#ffff4c"
			    android:layout_marginTop="2dp"
			    android:layout_marginBottom="2dp"
			    android:layout_marginRight="2dp"
			    android:clickable="true"
			    android:onClick="viewHP"
	            android:text="@string/place_holder" />
	    	
    	</LinearLayout> 
    	
	    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
        android:orientation="horizontal" >    
    	
    	<LinearLayout
	        android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:layout_marginTop="2dp"
			android:layout_marginBottom="2dp"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="2dp"
			android:clickable="true"
			android:onClick="viewExperience"
	        android:orientation="vertical" >

	        <TextView
				android:id="@+id/experience_text"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:background="#191919"
				android:textColor="#ffff4c"
				android:text="Experience" />
	        
	        <View 
			    android:layout_width="fill_parent"
			    android:background="#3d0000"
			    android:layout_height="2dp"/>
	        
	        <TextView
				android:id="@+id/experience_value_text"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:background="#191919"
				android:textColor="#ffff4c"
				android:text="@string/place_holder" />

		</LinearLayout>
	    	
    	<LinearLayout
	        android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:layout_marginTop="2dp"
			android:layout_marginBottom="2dp"
			android:layout_marginRight="2dp"
			android:clickable="true"
			android:onClick="viewNext"
	        android:orientation="vertical" >

	        <TextView
				android:id="@+id/next_text"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:background="#191919"
				android:textColor="#ffff4c"
				android:text="Next" />
	        
	        <View 
			    android:layout_width="fill_parent"
			    android:background="#3d0000"
			    android:layout_height="2dp"/>
	        
	        <TextView
				android:id="@+id/next_value_text"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:background="#191919"
				android:textColor="#ffff4c"
				android:text="@string/place_holder" />

		</LinearLayout>
			
    </LinearLayout>

</LinearLayout>
