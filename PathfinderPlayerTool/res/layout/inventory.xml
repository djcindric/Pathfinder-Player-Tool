<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#323232" >
    
    
    <LinearLayout
        android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
        android:orientation="horizontal" >    
        
    	<LinearLayout
	        android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:layout_marginTop="2dp"
			android:layout_marginRight="2dp"
			android:clickable="true"
			android:onClick="viewExperience"
	        android:orientation="vertical" >

	        <TextView
				android:id="@+id/mainhand_text"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:background="#191919"
				android:textColor="#ffff4c"
				android:text="Main-Hand" />
	        
	        <View 
			    android:layout_width="fill_parent"
			    android:background="#3d0000"
			    android:layout_height="2dp"/>
	        
	        <TextView
				android:id="@+id/mainhand_name"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:background="#191919"
				android:textColor="#ffff4c"
				android:text="@string/place_holder" />

		</LinearLayout>
		
    	<LinearLayout
	        android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:layout_marginTop="2dp"
			android:layout_marginLeft="2dp"
			android:clickable="true"
			android:onClick="viewExperience"
	        android:orientation="vertical" >

	        <TextView
				android:id="@+id/offhand_text"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:background="#191919"
				android:textColor="#ffff4c"
				android:text="Off-Hand" />
	        
	        <View 
			    android:layout_width="fill_parent"
			    android:background="#3d0000"
			    android:layout_height="2dp"/>
	        
	        <TextView
				android:id="@+id/offhand_name"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:background="#191919"
				android:textColor="#ffff4c"
				android:text="@string/place_holder" />

		</LinearLayout>
		
    </LinearLayout>
    
    <View 
	    android:layout_width="fill_parent"
	    android:background="#3d0000"
	    android:layout_height="2dp"/>
    
    <ListView
        android:id="@+id/weapon_list"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

    </ListView>
    
    <View 
	    android:layout_width="fill_parent"
	    android:background="#3d0000"
	    android:layout_height="2dp"/>
    
    <Button
        android:id="@+id/addWeapon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="addWeapon"
        android:text="Add" 
        android:textColor="#b30000"
        android:background="@drawable/custom_button" />
    

</LinearLayout>
