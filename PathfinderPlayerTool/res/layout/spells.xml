<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ExpandableListView
        android:id="@+id/spellsExpandableList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12" >

    </ExpandableListView>

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dailyName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="left|center"
            android:text="Daily: " />

        <TextView
            android:id="@+id/dailyValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="left|center"
            android:text="@string/place_holder" />

        <Button
            android:id="@+id/incrementDaily"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="incrementDaily"
            android:text="+" />

        <Button
            android:id="@+id/decrementDaily"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="decrementDaily"
            android:text="-" />

        <Button
            android:id="@+id/resetDaily"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:onClick="resetDaily"
            android:text="Reset" />
    </LinearLayout>
    <Button
        android:id="@+id/addSpell"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="addSpell"
        android:text="Add" />

</LinearLayout>