<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232"
    android:orientation="vertical" >

    <ExpandableListView
        android:id="@+id/spellsExpandableList"
        android:groupIndicator="@drawable/group_indicator_selector"
        android:childDivider="#4C4C4C"
        android:dividerHeight="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12" >

    </ExpandableListView>

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dailyName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="left|center"
            android:text="Daily: " 
            android:textColor="#ffff4c"/>

        <TextView
            android:id="@+id/dailyValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="left|center"
            android:text="@string/place_holder"
            android:textColor="#ffff4c" />

        <Button
            android:id="@+id/incrementDaily"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="incrementDaily"
            android:textColor="#ffff4c"
            android:text="+" />

        <Button
            android:id="@+id/decrementDaily"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="decrementDaily"
            android:textColor="#ffff4c"
            android:text="-" />

        <Button
            android:id="@+id/resetDaily"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:onClick="resetDaily"
            android:text="Reset"
            android:textColor="#ffff4c" />
    </LinearLayout>
    <Button
        android:id="@+id/addSpell"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="addSpell"
        android:text="Add" 
        android:textColor="#ffff4c" />

</LinearLayout>